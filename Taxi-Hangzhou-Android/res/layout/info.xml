<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>

    	<TextView
	    android:id="@+id/infoTextView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="20dp"
	    android:text="个人信息"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#ffffffff" />

	<ImageView
	    android:id="@+id/infoImageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/infoTextView1"
	    android:layout_marginTop="5dp"
	    android:src="@drawable/line" />
	
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg1"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="15dp"
    
    android:layout_below="@id/infoImageView1"
>

     <TextView
         android:id="@+id/nameText"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="10dp"
         android:gravity="right"
         android:text="姓名："
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textSize="18sp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nameText"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/nameText"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignRight="@id/nameText"
        android:layout_below="@+id/nameText"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="手机号："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameText"
        android:layout_alignRight="@+id/nameText"
        android:layout_below="@id/phoneNum"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="密码："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/carNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameText"
        android:layout_alignRight="@id/nameText"
        android:layout_below="@id/passwordText"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="车牌号："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/peopleNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nameText"
        android:layout_alignRight="@id/nameText"
        android:layout_below="@id/carNumText"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="身份证："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/serevNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/nameText"
        android:layout_below="@id/peopleNumText"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:text="服务资格证："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/phoneNumInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phoneNum"
        android:layout_alignLeft="@+id/nameInput"
        android:layout_alignRight="@+id/nameInput"
        android:ems="10"
        android:inputType="phone"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passwordText"
        android:layout_alignLeft="@+id/phoneNumInput"
        android:layout_alignRight="@+id/phoneNumInput"
        android:ems="10"
        android:inputType="textPassword"
        android:singleLine="true" />

    <EditText
        android:id="@+id/carNumInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/carNumText"
        android:layout_alignLeft="@+id/passwordInput"
        android:layout_alignRight="@+id/passwordInput"
        android:ems="10"
        android:hint="浙A.T"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/peopleNumInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/peopleNumText"
        android:layout_alignLeft="@+id/carNumInput"
        android:layout_alignRight="@+id/carNumInput"
        android:ems="10"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/serveNumInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serevNumText"
        android:layout_alignLeft="@+id/peopleNumInput"
        android:layout_alignRight="@+id/peopleNumInput"
        android:ems="10"
        android:inputType="text"
        android:singleLine="true" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/serevNumText"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:text="提交" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/buttonApply"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonApply"
        android:layout_marginRight="40dp"
        android:text="返回" />



</RelativeLayout>
<ProgressBar
        android:id="@+id/infoProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-5dp"
        android:visibility="invisible" />
</RelativeLayout>
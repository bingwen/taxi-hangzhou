<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CustomListActivity" >
<TextView
    android:id="@+id/msgHeadTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="20dp"
    android:text="信息列表"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#ffffffff" />

<ImageView
    android:id="@+id/msgHeadImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@id/msgHeadTextView"
    android:layout_marginTop="5dp"
    android:src="@drawable/line" />

<ListView
    android:id="@+id/msgListView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/buttonSelectDate"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@id/msgHeadImageView" >

</ListView>

<Button
    android:id="@+id/buttonSelectDate"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="10dp"
    android:text="查看" />

<Button
    android:id="@+id/buttonMsgBack"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_alignBaseline="@+id/buttonSelectDate"
    android:layout_alignParentRight="true"
    android:layout_marginRight="40dp"
    android:text="返回" />

</RelativeLayout>